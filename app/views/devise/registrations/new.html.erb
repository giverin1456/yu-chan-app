<div class="admin">

<div class="contents row">
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @admin, url: admin_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
    <label for="exampleInputEmail1">名前</label>
    <%= f.text_field :name, class:"form-control", id:"exampleInputEmail1"%>
  </div>

    <div class="form-group">
    <label for="exampleInputEmail1">メールアドレス</label>
    <%= f.text_field :email, class:"form-control", id:"exampleInputEmail1"%>
  </div>

    <div class="form-group">
    <label for="exampleInputEmail1">パスワード</label>
    <%= f.password_field :password, class:"form-control", id:"exampleInputEmail1"%>
  </div>

      <div class="form-group">
    <label for="exampleInputEmail1">パスワード確認</label>
    <%= f.password_field :password_confirmation, class:"form-control", id:"exampleInputEmail1"%>
  </div>
  <button type="submit" class="btn btn-primary">ログイン</button>
    <% end %>
  </div>
</div>
</div>