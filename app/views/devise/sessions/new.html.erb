<div class="contents row">
  <div class="container">
    <h2>ログイン</h2>
    <%= form_with model: @admin, url: admin_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

    <div class="field">
       <%= f.label :名前 %><br />
      <%= f.text_field :name, class:"input-default", id:"name"%>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :確認パスワード %><br />
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div>