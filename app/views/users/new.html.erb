<%= form_with(model: @user, local: true) do |f| %>
 <%= f.text_field :name, class:"items-text", id:"item-name", placeholder:"名前" %>
  <%= f.text_field :kana, class:"items-text", id:"item-name", placeholder:"カナ" %>
  <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  <%= f.collection_select(:know_id, Know.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  <%= f.text_field :phone_number, class:"items-text", id:"item-name", placeholder:"電話番号" %>
  <%= f.text_field :postal_code, class:"items-text", id:"item-name", placeholder:"郵便番号" %>
  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  <%= f.text_field :city, class:"items-text", id:"item-name", placeholder:"市区町村" %>
  <%= f.text_field :street, class:"items-text", id:"item-name", placeholder:"番地" %>
  <%= f.text_field :building, class:"items-text", id:"item-name", placeholder:"建物" %>
  <%= f.text_field :email, class:"items-text", id:"item-name", placeholder:"メールアドレス" %>
  <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  <%= f.submit "登録" ,class:"register-red-btn" %>
<% end %>